<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.PracticeActivity">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colory"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/p_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_iconc" />

                <ImageView
                    android:id="@+id/p_star"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/star" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp" />
    <ImageView
        android:src="@mipmap/history_2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        >

        <Button
            android:id="@+id/b_true"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/button"
            android:text="True" />

        <Button
            android:id="@+id/b_false"
            android:layout_width="110dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button"
            android:text="False" />
    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Next" />
</LinearLayout>